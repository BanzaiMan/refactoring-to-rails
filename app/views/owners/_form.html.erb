<%= form_for @owner do |f| %>
  <%= render :partial => 'shared/errors', :locals => { :object => @owner } %>
  <table>
    <tr>
      <th>
        <%= f.label :first_name %>
        <br/>
        <%= f.text_field :first_name, :size => 30, :maxlength => 80 %>
      </th>
    </tr>
    <tr>
      <th>
        <%= f.label :last_name %>
        <br/>
        <%= f.text_field :last_name, :size => 30, :maxlength => 80 %>
      </th>
    </tr>
    <tr>
      <th>
        <%= f.label :address %>
        <br/>
        <%= f.text_field :address, :size => 30, :maxlength => 80 %>
      </th>
    </tr>
    <tr>
      <th>
        <%= f.label :city %>
        <br/>
        <%= f.text_field :city, :size => 30, :maxlength => 80 %>
      </th>
    </tr>
    <tr>
      <th>
        <%= f.label :telephone %>
        <br/>
        <%= f.text_field :telephone, :size => 30, :maxlength => 80 %>
      </th>
    </tr>
    <tr>
      <td>
        <%= f.submit "#{@owner.new? ? 'Add' : 'Update'} Owner"  %>
      </td>
    </tr>
  </table>
<% end -%>
